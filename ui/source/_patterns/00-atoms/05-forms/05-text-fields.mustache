<fieldset>
    <div class="field-container">
        <label class="form-control-label" for="text">Text Input <abbr title="Required">*</abbr></label>
        <input class="form-control" id="text" type="text" placeholder="Text Input">
    </div>
    <div class="field-container">
        <label class="form-control-label" for="password">Password</label>
        <input class="form-control" id="password" type="password" placeholder="Type your Password">
    </div>
    <div class="field-container">
        <label class="form-control-label" for="webaddress">Web Address</label>
        <input class="form-control" id="webaddress" type="url" placeholder="http://yoursite.com">
    </div>
    <div class="field-container">
        <label class="form-control-label" for="emailaddress">Email Address</label>
        <input class="form-control" id="emailaddress" type="email" placeholder="name@email.com">
    </div>
    <div class="field-container">
        <label class="form-control-label" for="search">Search</label>
        <input class="form-control" id="search" type="search" placeholder="Enter Search Term">
    </div>
    <div class="field-container">
        <label class="form-control-label" for="number">Number Input <abbr title="Required">*</abbr></label>
        <input class="form-control" id="number" type="number" placeholder="Enter a Number" pattern="[0-9]*">
    </div>
    <div class="field-container">
        <label class="form-control-label" for="textarea">Textarea</label>
        <textarea class="form-control" id="textarea" rows="8" cols="48" placeholder="Enter your message here"></textarea>
    </div>
    <div class="field-container">
        <label class="form-control-label has-error">Error Input</label>
        <input class="form-control has-error" type="text" placeholder="Text Input">
    </div>
    <div class="field-container">
        <label class="form-control-label has-success">Valid</label>
        <input class="form-control has-success" type="text" placeholder="Text Input">
    </div>
</fieldset>
