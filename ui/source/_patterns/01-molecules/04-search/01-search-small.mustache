<form action="{{ url }}" method="post" class="form">
    <div class="tiny-search-block">
	    <legend class="sr-only">Search</legend>
	    <label for="search-field" class="sr-only">Search</label>
		<div class="search-block__field">
	    	<input type="search" placeholder="{{ search }}" id="search-field" class="form-control search-block__field-input" tabindex="0" />
		</div>
	    <button class="btn btn-primary search-block__button">
	    	<span class="fa fa-search" aria-hidden="true"></span>
