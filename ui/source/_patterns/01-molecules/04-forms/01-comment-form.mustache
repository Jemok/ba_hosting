<form method="post" action="{{ url }}" class="comment-form">
   <fieldset class="form-section">
		<div class="section__content in-1s">
            <div class="field-section">
                <label class="form-control-label" for="comment-name">Name</label>
                <input class="form-control" id="comment-name" type="text" placeholder="Enter Your Name" />
            </div>
            <div class="field-section">
                <label class="form-control-label" for="comment-email">Email</label>
                <input class="form-control" id="comment-email" type="email" placeholder="Your email address" />
            </div>
            <div class="field-section">
                <label class="form-control-label" for="comment-url">URL</label>
                <input class="form-control" id="comment-url" type="url" placeholder="Website if you got one" />
            </div>
            <div class="field-section">
                <label class="form-control-label" for="comment-field">Comment</label>
                <textarea class="form-control" id="comment-field" rows="5" placeholder="Write you comment here"></textarea>
            </div>
        </div>
    </fieldset>
</form>
